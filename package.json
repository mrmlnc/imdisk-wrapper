{
  "name": "imdisk-wrapper",
  "version": "1.0.1",
  "description": "A simple wrapper for ImDisk to create (only VM) and delete virtual disks",
  "license": "MIT",
  "repository": "mrmlnc/imdisk-wrapper",
  "author": {
    "name": "Denis Malinochkin",
    "url": "canonium.com"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "os": [
    "win32"
  ],
  "scripts": {
    "test": "xo && mocha --timeout=10000"
  },
  "keywords": [
    "windows",
    "ram",
    "ramdisk",
    "imdisk",
    "virtual"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "co": "^4.6.0",
    "windows-drive-letters": "^3.0.0"
  },
  "devDependencies": {
    "mocha": "^2.5.3",
    "xo": "^0.15.1"
  },
  "xo": {
    "rules": {
      "indent": [2, 2, { "SwitchCase": 1 }],
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "arrow-parens": [2, "always"],
      "object-curly-spacing": [2, "always"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [2, "never"],
      "generator-star-spacing": [2, "after"]
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
